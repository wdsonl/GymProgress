<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BenchpressActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.GymProgress.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray"
            app:popupTheme="@style/Theme.GymProgress.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/voltarBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salvar e voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/benchpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso bench press:"
            app:layout_constraintBottom_toBottomOf="@+id/Pesobenchpress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Pesobenchpress" />

        <EditText
            android:id="@+id/Pesobenchpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:hint="Peso"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/benchpress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Kgbenchpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kg"
            app:layout_constraintBottom_toBottomOf="@+id/Pesobenchpress"
            app:layout_constraintStart_toEndOf="@+id/Pesobenchpress"
            app:layout_constraintTop_toTopOf="@+id/Pesobenchpress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>